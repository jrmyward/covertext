<%= render UI::SectionComponent.new(py: "py-8 lg:py-20", tag: :section, id: "pricing", inner_class: "group", data: { controller: "pricing" }) do %>
  <div class="text-center">
    <h2 class="mb-4 text-3xl font-bold"><%= @title %></h2>
    <p class="text-base-content/70 mb-8"><%= @subtitle %></p>
  </div>

  <!-- Monthly/Yearly Toggle -->
  <div class="mt-8">
    <%= render UI::Form::BillingIntervalToggleComponent.new(
      name: "pricing-tab",
      selected: :yearly,
      show_badge: true,
      data: { action: "change->pricing#updateAllUrls" }
    ) %>
  </div>

  <%= content %>
<% end %>
