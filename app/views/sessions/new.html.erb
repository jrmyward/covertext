<% content_for :title, "Login - CoverText" %>

<div class="min-h-screen flex items-center justify-center">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold mb-4">CoverText Admin</h2>

      <% if flash[:alert] %>
        <div class="alert alert-error mb-4">
          <span><%= flash[:alert] %></span>
        </div>
      <% end %>

      <%= form_with url: login_path, method: :post, class: "space-y-4" do %>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Email</span>
          </label>
          <%= email_field_tag :email, nil, class: "input input-bordered w-full", required: true, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Password</span>
          </label>
          <%= password_field_tag :password, nil, class: "input input-bordered w-full", required: true, autocomplete: "current-password" %>
        </div>

        <div class="form-control mt-6">
          <%= submit_tag "Log In", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="text-center text-sm mt-4">
        <%= link_to "Forgot password?", new_password_reset_path, class: "link link-primary" %>
      </div>
    </div>
  </div>
</div>
