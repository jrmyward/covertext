<% content_for :title, "Reset Password - CoverText" %>

<div class="min-h-screen flex items-center justify-center">
  <div class="card w-96 bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl font-bold mb-4">Reset Password</h2>

      <%= form_with url: password_resets_path, method: :post, class: "space-y-4" do %>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Email</span>
          </label>
          <%= email_field_tag :email, nil, class: "input input-bordered w-full", required: true, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-control mt-6">
          <%= submit_tag "Send Reset Link", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="text-center text-sm mt-4">
        <%= link_to "Back to login", login_path, class: "link link-primary" %>
      </div>
    </div>
  </div>
</div>
